# ===========================================
# VERICASE Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control

# ---------- DATABASE ----------
DATABASE_URL=postgresql://user:password@localhost:5432/vericase

# ---------- SESSION ----------
SESSION_SECRET=replace-with-a-strong-random-string

# ---------- AI PROVIDERS ----------
# At least one AI provider key is required for AI features
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GOOGLE_AI_API_KEY=
DEEPSEEK_API_KEY=

# ---------- SERVER ----------
NODE_ENV=development
PORT=5000
